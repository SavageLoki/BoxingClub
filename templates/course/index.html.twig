{% block body %}

	<div class="cours">
		<div class="absenceContenu">
			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Date</th>
						<th>Heure de d√©but</th>
						<th>Heure de fin</th>
						<th>Niveau</th>
						<th>Public</th>
						<th>Membres maximum</th>
						<th>Membres</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for course in courses %}
						<tr>
							<td>{{ course.Nom }}</td>
							<td>{{ course.date }}</td>
							<td>{{ course.heure }}</td>
							<td>{{ course.fin }}</td>
							<td>{{ course.niveau }}</td>
							<td>{{ course.Public }}</td>
							<td>{{course.maxMember}}</td>
							<td>
								{% for member in course.members %}
									{{member.nom}}
									{{member.prenom}}
								{% endfor %}
							</td>
							<td>
								<a href="{{ path('course_show', {'id': course.id}) }}">Voir</a>
								<a href="{{ path('course_edit', {'id': course.id}) }}">Editer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Pas de cours</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<div class="absencePic">
		<a href="{{ path('course_new') }}"><img src="/pictures/new.png"></a>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Actualités
{% endblock %}


{% block body %}

	<div class="container-titre">
		<div class="actu">
			<h1>Les dernières actus du club</h1>

		</div>
		{% if is_granted('ROLE_ADMIN') %}
			<div class="nouveau">
				<a href="{{ path('news_new') }}"><img src="{{asset('pictures/new.png')}}" alt="edition"></a>
			</div>
		{% endif %}
	</div>

	<div class="article">
		{% for news in news %}

			{% if is_granted('ROLE_ADMIN') %}
				<div class="edition">
					<a href="{{path('news_edit',{'id':news.id})}}"><img src="{{asset('pictures/edit.png')}}" alt="edition"></a>
				</div>
			{% endif %}

			<p>
				<div class="titre">
					<h2>
						<a href="{{ path('news_show', {'id': news.id}) }}">{{ news.title }}</a>
					</h2>
				</div>
				<div class="date">
					publié le&nbsp;
					{{ news.publicationDate ? news.publicationDate|date('d-m-Y') : '' }}</p>
			</p>

			<div class="content">
				{{news.content}}
			</div>
		</div>

	{% else %}
		<p>Pas de nouvelles actualités pour le moment</p>
	{% endfor %}
</div>{% endblock %}

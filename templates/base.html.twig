<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href="{{ asset('style/navbar.css') }}">
			<link rel="stylesheet" type="text/css" href="{{ asset('style/news/article.css') }}">
			<link rel="stylesheet" type="text/css" href="{{ asset('style/schedule.css') }}">
		{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
		<nav class="navbar">
			<a href="{{ path("news_index") }}">Actualités</a>
			<div class="dropdown">
				<button class="dropbtn">Le club
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-content">
					<a href="#">Qui sommes-nous</a>
					<a href="{{path("contact")}}">Contact</a>
				</div>
			</div>
			<div class="dropdown">
				<button class="dropbtn">Les cours
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-content">
					<a href="{{path("class_registration")}}">Pré-inscription</a>
					<a href="{{path("absence_new")}}">Signaler une absence</a>
				</div>
			</div>
			<div class="dropdown">
				<button class="dropbtn">Tableau de bord</button>
				<i class="fa fa-caret-down"></i>
				<div class="dropdown-content">
					<a href="{{path("dashboard")}}">Gestion des membres</a>
					<a href="{{path("course_management")}}">Gestion des cours</a>
				</div>
			</div>
			<a href="{{ path("app_login") }}">Se connecter</a>
			<a href='{{ path("app_register") }}'>Inscription</a>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html>

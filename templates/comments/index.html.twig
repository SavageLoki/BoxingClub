{% block body %}


	{% for comment in comments %}
		<div class="commentaire">

			<div class="contenuCommentaire">
				{{ comment.content }}

				<div class="dateCommentaire">
					publi√© le
					{{ comment.datePublication ? comment.datePublication|date('Y-m-d') : '' }}
					par
					{{ comment.author }}

				</div>

				{% if is_granted('ROLE_ADMIN') %}

					<a href="{{ path('comments_show', {'id': comment.id}) }}">Voir</a>
					<a href="{{ path('comments_edit', {'id': comment.id}) }}">Editer</a>

				{% endif %}
			</div>
		</div>
		{% else %}
	{% endfor %}
{% endblock %}

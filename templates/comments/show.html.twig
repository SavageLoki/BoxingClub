{% extends 'base.html.twig' %}

{% block title %}Comments
{% endblock %}

{% block body %}
	<h1>Comments</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ comment.content }}</td>
			</tr>
			<tr>
				<th>DatePublication</th>
				<td>{{ comment.datePublication ? comment.datePublication|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Author</th>
				<td>{{ comment.author }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('comments_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>

		{{ include('comments/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
